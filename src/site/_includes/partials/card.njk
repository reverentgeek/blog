{% macro card(post) %}
  <div class="post">
    <div class="flex flex-wrap">
      {% if post.data.feature_image %}
        <a class="w-full py-4 lg:w-1/3 lg:mb-0" href="{{ post.url }}">
          <img
            eleventy:widths="300,600"
            class="shadow rounded-lg"
            src="{{ post.data.feature_image }}"
            alt="{{ post.data.title }}"
            sizes="(min-width: 1024px) 300px, 90vw"
            loading="lazy"
            decoding="async">
        </a>
      {% else %}
        <div class="hidden lg:block lg:w-1/3"></div>
      {% endif %}
      <div class="w-full lg:w-2/3 lg:pl-4">
        <h2 class="post-title">
          <a class="" href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <div class="post-date">{{ post.data.date | postDate }}</div>
        <div class="">
          <a class="" href="{{ post.url }}">{{ post.data.description }}</a>
        </div>
        <div class="my-2">
          <a class="underline text-blue-600" href="{{ post.url }}">Read more...</a>
        </div>
      </div>
    </div>
  </div>
{% endmacro %}
