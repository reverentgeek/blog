{% macro card(post) %}
	<div class="post">
		<a class="" href="{{ post.url }}">
			<header class="">
				<div class="post-date">{{ post.data.date | postDate }}</div>
				<h2 class="post-title">
					{{ post.data.title }}
				</h2>
				{% if post.data.featured_image %}
					<img class="post-featured-image" src="{{ post.data.featured_image }}" alt="{{ post.data.title }}">
				{% endif %}
			</header>
			{% if post.data.description %}
			<div class="post-description">
				{{ post.data.description }}
			</div>
			{% endif %}
		</a>
	</div>
{% endmacro %}
