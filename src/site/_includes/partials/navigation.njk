<div class="flex w-full">
  <label for="menu-toggle" class="flex-none justify-end cursor-pointer md:hidden">
    {{ icon({ id: 'burger', class: "", width: "20", height: "20" }) }}
  </label>
  <input type="checkbox" class="hidden" id="menu-toggle"/>
  <div id="menu" class="md:p-8 mx-4 max-w-sm md:max-w-none hidden w-full md:bg-transparent md:flex md:items-center md:justify-center-safe">
    <nav class="flex flex-col md:flex-row md:items-center md:justify-center gap-3 md:gap-2">
      {% if page.url != "/" %}
        <a class="flex-1" href="{{ site.url }}">
          <img class="h-10 lg:h-12 mr-2" src="{{ site.logo }}" alt="{{ site.title }}">
        </a>
      {% endif %}

      {% for item in site.navigation %}
        <a class="group relative font-bold bg-gray-200 text-gray-700 border-2 border-gray-200 hover:border-rgblue rounded-xl px-4 py-2 transition-all duration-300 hover:scale-110 hover:shadow-lg text-nowrap" {% if
    page.url==item.url %} aria-current="page" {% endif %} href="{{ item.url }}">
          {{ item.label }}
        </a>
      {% endfor %}
      <a title="BlueSky" class="md:block md:w-auto group relative rounded-full border-2 border-gray-200 p-2 hover:border-bluesky hover:bg-bluesky/80 transition-all duration-300 hover:scale-110 hover:shadow-lg bg-bluesky" href="https://bsky.app/profile/reverentgeek.com" target="_blank" rel="noopener noreferrer">
        {{ icon({ id: 'bluesky', class: "text-white w-8 h-8 md:w-6 md:h-6"  }) }}
      </a>
      <a title="X (Twitter)" class="md:w-auto md:block group relative rounded-full border-2 border-xtwitter p-2 hover:border-xtwitter hover:bg-xtwitter/80 transition-all duration-300 hover:scale-110 hover:shadow-lg bg-xtwitter" href="https://x.com/reverentgeek" target="_blank" rel="noopener noreferrer">
        {{ icon({ id: 'x', class: "text-white w-8 h-8 md:w-6 md:h-6"  }) }}
      </a>
      <a title="GitHub" class="md:w-auto md:block group relative rounded-full border-2 border-github p-2 hover:border-github hover:bg-github/80 transition-all duration-300 hover:scale-110 hover:shadow-lg bg-github" href="https://github.com/reverentgeek" target="_blank" rel="noopener noreferrer">
        {{ icon({ id: 'github', class: "text-white w-8 h-8 md:w-6 md:h-6"  }) }}
      </a>
      <a title="Instagram" class="md:w-auto md:block group relative rounded-full border-2 border-instagram p-2 hover:border-instagram hover:bg-instagram/80 transition-all duration-300 hover:scale-110 hover:shadow-lg bg-instagram" href="https://www.instagram.com/reverentgeek/" target="_blank" rel="noopener noreferrer">
        {{ icon({ id: 'instagram', class: "text-white w-8 h-8 md:w-6 md:h-6"  }) }}
      </a>
      <a title="Instagram" class="md:w-auto md:block group relative rounded-full border-2 border-rss p-2 hover:border-rss hover:bg-rss/80 transition-all duration-300 hover:scale-110 hover:shadow-lg bg-rss" href="https://www.instagram.com/reverentgeek/" target="_blank" rel="noopener noreferrer">
        {{ icon({ id: 'rss', class: "text-white w-8 h-8 md:w-6 md:h-6"  }) }}
      </a>
    </nav>
  </div>
</div>
