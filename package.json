{
  "name": "blog",
  "version": "1.0.0",
  "description": "The ReverentGeek Blog using Eleventy",
  "main": ".eleventy.js",
  "scripts": {
    "clean": "run-s clean:*",
    "clean:cache": "rimraf ./.cache",
    "clean:site": "rimraf ./dist",
    "debug": "cross-env DEBUG=Eleventy*,ReverentGeek* npm run dev",
    "dev": "cross-env ELEVENTY_ENV=dev eleventy --serve",
    "build:assets": "cross-env NODE_ENV=production parcel build ./src/assets/css/styles.css ./src/assets/js/index.js ./src/assets/js/contact.js --out-dir ./dist/assets --public-url /assets --no-source-maps",
    "build:html": "cross-env ELEVENTY_ENV=production eleventy",
    "test": "npm run build",
    "lint:markdown": "markdownlint src/**/*.md",
    "lint": "eslint . --ext .js --cache",
    "build": "run-s clean build:*",
    "watch": "run-s clean:* && run-p watch:*",
    "watch:html": "cross-env ELEVENTY_ENV=development eleventy --serve --port=8080",
    "watch:assets": "cross-env NODE_ENV=development parcel watch ./src/assets/css/styles.css ./src/assets/js/index.js ./src/assets/js/contact.js --out-dir ./dist/assets --public-url /assets --no-source-maps --no-hmr",
    "start": "npm run watch",
    "post": "node src/utils/post.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reverentgeek/blog.git"
  },
  "keywords": [
    "eleventy",
    "static",
    "site",
    "jamstack",
    "reverentgeek",
    "blog"
  ],
  "author": "David Neal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reverentgeek/blog/issues"
  },
  "homepage": "https://github.com/reverentgeek/blog#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-rss": "^1.0.6",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "autoprefixer": "^9.7.6",
    "axios": "^0.19.2",
    "clean-css": "^4.2.1",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "dotenv": "^8.0.0",
    "eleventy-plugin-lazyimages": "liamfiddler/eleventy-plugin-lazyimages",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "postcss": "^7.0.27",
    "postcss-cli": "^7.1.0",
    "postcss-color-mix": "^1.1.0",
    "postcss-comment": "^2.0.0",
    "postcss-import": "^12.0.1",
    "postcss-mixins": "^6.2.3",
    "postcss-nested": "^4.2.1",
    "postcss-simple-vars": "^5.0.2",
    "precss": "^4.0.0",
    "prismjs": "^1.20.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^1.2.0"
  },
  "devDependencies": {
    "commander": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-reverentgeek": "^2.2.0",
    "fs-extra": "^9.0.0",
    "markdownlint-cli": "^0.22.0",
    "slug": "^2.1.1",
    "uuid": "^7.0.3"
  }
}
