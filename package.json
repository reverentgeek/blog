{
	"name": "blog",
	"version": "1.0.0",
	"description": "The ReverentGeek Blog using Eleventy",
	"scripts": {
		"clean": "run-s clean:*",
		"clean:cache": "rimraf ./.parcel-cache",
		"clean:site": "rimraf ./dist",
		"debug": "cross-env DEBUG=Eleventy*,ReverentGeek* npm run dev",
		"dev": "cross-env ELEVENTY_ENV=dev eleventy --serve",
		"build:assets": "cross-env NODE_ENV=production parcel build ./src/assets/css/styles.css ./src/assets/js/index.js --dist-dir ./dist/assets --public-url /assets --no-source-maps",
		"build:html": "cross-env ELEVENTY_ENV=production eleventy",
		"test": "npm run build",
		"lint:markdown": "markdownlint src/**/*.md",
		"lint": "eslint . --ext .js --cache",
		"build": "run-s clean build:*",
		"watch": "run-s clean:* && run-p watch:*",
		"watch:html": "cross-env ELEVENTY_ENV=development eleventy --serve --port=8080",
		"watch:assets": "cross-env NODE_ENV=development parcel watch ./src/assets/css/styles.css ./src/assets/js/index.js --dist-dir ./dist/assets --public-url /assets --no-source-maps --no-hmr",
		"start": "npm run watch",
		"post": "node src/utils/post.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/reverentgeek/blog.git"
	},
	"keywords": [
		"eleventy",
		"static",
		"site",
		"jamstack",
		"reverentgeek",
		"blog"
	],
	"author": "David Neal",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/reverentgeek/blog/issues"
	},
	"homepage": "https://github.com/reverentgeek/blog#readme",
	"dependencies": {
		"@11ty/eleventy": "^0.11.1",
		"@11ty/eleventy-plugin-rss": "^1.0.9",
		"@fullhuman/postcss-purgecss": "^3.0.0",
		"autoprefixer": "^10.0.2",
		"clean-css": "^4.2.1",
		"cross-env": "^7.0.2",
		"cssnano": "^4.1.10",
		"dotenv": "^8.0.0",
		"eleventy-plugin-lazyimages": "^2.1.0",
		"html-minifier": "^4.0.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.0.0-nightly.462",
		"postcss": "^8.1.10",
		"postcss-cli": "^8.3.0",
		"postcss-color-mix": "^1.1.0",
		"postcss-comment": "^2.0.0",
		"postcss-import": "^13.0.0",
		"postcss-mixins": "^7.0.1",
		"postcss-nested": "^5.0.1",
		"postcss-simple-vars": "^6.0.1",
		"precss": "^4.0.0",
		"prismjs": "^1.22.0",
		"rimraf": "^3.0.2",
		"tailwindcss": "^1.9.6"
	},
	"devDependencies": {
		"@parcel/optimizer-cssnano": "^2.0.0-nightly.605",
		"@parcel/packager-css": "^2.0.0-nightly.605",
		"@parcel/transformer-css": "^2.0.0-nightly.605",
		"@parcel/transformer-postcss": "^2.0.0-nightly.605",
		"command": "^0.0.5",
		"commander": "^6.2.0",
		"eslint": "^7.20.0",
		"eslint-config-reverentgeek": "^3.1.1",
		"fs-extra": "^9.1.0",
		"gm": "^1.23.1",
		"markdownlint-cli": "^0.25.0",
		"slug": "^4.0.2",
		"uuid": "^8.3.2"
	}
}
