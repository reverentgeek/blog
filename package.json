{
	"name": "blog",
	"version": "1.2.2",
	"description": "The ReverentGeek Blog using Eleventy",
	"scripts": {
		"clean": "node scripts/clean.js",
		"clean:all": "rimraf dist",
		"serve:css": "postcss src/assets/css/styles.css --output dist/assets/index.css --watch",
		"serve:js": "esbuild src/assets/js/index.js src/assets/js/prism.js --bundle --outdir=dist/assets --watch",
		"serve:eleventy": "ELEVENTY_ENV=development eleventy --serve",
		"serve": "npm-run-all clean --parallel serve:*",
		"build:css": "postcss src/assets/css/styles.css --output dist/assets/index.css --no-map",
		"build:js": "esbuild src/assets/js/index.js src/assets/js/prism.js --bundle --outdir=dist/assets --minify",
		"build:eleventy": "ELEVENTY_ENV=production eleventy",
		"build": "NODE_ENV=production run-s clean build:css build:js build:eleventy",
		"start": "pnpm run serve",
		"lint": "eslint . --ext .cjs --ext .js --cache",
		"lint:markdown": "markdownlint src/**/*.md",
		"post": "node src/utils/post.js",
		"test:lighthouse": "lighthouse --view https://reverentgeek.com --output html --output-path ./reports/report.html"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/reverentgeek/blog.git"
	},
	"engines": {
		"node": ">=22.19.0"
	},
	"keywords": [
		"eleventy",
		"static",
		"site",
		"jamstack",
		"reverentgeek",
		"blog"
	],
	"author": "David Neal",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/reverentgeek/blog/issues"
	},
	"homepage": "https://github.com/reverentgeek/blog#readme",
	"type": "module",
	"dependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-navigation": "^1.0.5",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@tailwindcss/postcss": "^4.1.18",
		"autoprefixer": "^10.4.24",
		"clean-css": "^5.3.3",
		"esbuild": "^0.25.0",
		"eleventy-plugin-broken-links": "^2.2.1",
		"html-minifier-terser": "^7.2.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.6",
		"postcss-import": "^16.1.1",
		"postcss-cli": "^11.0.1",
		"postcss-nesting": "^14.0.0",
		"prismjs": "^1.30.0",
		"rimraf": "^6.1.2",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"commander": "^14.0.3",
		"eslint": "^9.39.2",
		"eslint-config-reverentgeek": "^6.3.9",
		"fs-extra": "^11.3.3",
		"jimp": "^1.6.0",
		"lighthouse": "^13.0.1",
		"markdownlint-cli": "^0.47.0",
		"probe-image-size": "^7.2.3",
		"slug": "^11.0.1",
		"uuid": "^13.0.0"
	},
	"packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
