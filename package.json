{
	"name": "blog",
	"version": "1.2.1",
	"description": "The ReverentGeek Blog using Eleventy",
	"scripts": {
		"clean": "rimraf dist",
		"serve:webpack": "webpack --mode development --watch",
		"serve:eleventy": "ELEVENTY_ENV=development eleventy --serve",
		"serve": "npm-run-all clean --parallel serve:*",
		"build:webpack": "webpack --mode production",
		"build:eleventy": "ELEVENTY_ENV=production eleventy",
		"build": "NODE_ENV=production run-s clean build:*",
		"start": "pnpm run serve",
		"lint": "eslint . --ext .cjs --ext .js --cache",
		"lint:markdown": "markdownlint src/**/*.md",
		"post": "node src/utils/post.js",
		"test:lighthouse": "lighthouse --view https://reverentgeek.com --output html --output-path ./reports/report.html"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/reverentgeek/blog.git"
	},
	"engines": {
		"node": ">=22.16.0"
	},
	"keywords": [
		"eleventy",
		"static",
		"site",
		"jamstack",
		"reverentgeek",
		"blog"
	],
	"author": "David Neal",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/reverentgeek/blog/issues"
	},
	"homepage": "https://github.com/reverentgeek/blog#readme",
	"type": "module",
	"dependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-navigation": "^1.0.4",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@tailwindcss/postcss": "^4.1.15",
		"autoprefixer": "^10.4.21",
		"clean-css": "^5.3.3",
		"css-loader": "^7.1.2",
		"eleventy-plugin-broken-links": "^2.2.1",
		"html-minifier-terser": "^7.2.0",
		"mini-css-extract-plugin": "^2.9.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.6",
		"postcss-import": "^16.1.1",
		"postcss-loader": "^8.2.0",
		"postcss-nesting": "^13.0.2",
		"prismjs": "^1.30.0",
		"rimraf": "^6.0.1",
		"tailwindcss": "^4.1.15",
		"webpack": "^5.102.1",
		"webpack-cli": "^6.0.1"
	},
	"devDependencies": {
		"commander": "^14.0.1",
		"eslint": "^9.38.0",
		"eslint-config-reverentgeek": "^6.3.1",
		"fs-extra": "^11.3.2",
		"jimp": "^1.6.0",
		"lighthouse": "^12.8.2",
		"markdownlint-cli": "^0.45.0",
		"probe-image-size": "^7.2.3",
		"slug": "^11.0.1",
		"uuid": "^11.1.0"
	}
}